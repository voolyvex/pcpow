# PCPow Start
Import-Module pcpow-common -MinimumVersion 1.0.0 -Force -ErrorAction SilentlyContinue

# Create function wrappers
function global:Sleep-PC { & "$env:USERPROFILE\AppData\Local\Microsoft\WindowsApps\Close-AndSleep.ps1" @args }
function global:Restart-PCApps { & "$env:USERPROFILE\AppData\Local\Microsoft\WindowsApps\Close-AndRestart.ps1" @args }
function global:Stop-PCApps { & "$env:USERPROFILE\AppData\Local\Microsoft\WindowsApps\Close-AndShutdown.ps1" @args }

# Create aliases
Set-Alias -Name pows -Value Sleep-PC -Scope Global
Set-Alias -Name powr -Value Restart-PCApps -Scope Global
Set-Alias -Name powd -Value Stop-PCApps -Scope Global
# PCPow End 